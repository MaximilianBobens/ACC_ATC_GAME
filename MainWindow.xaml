<Window x:Class="ATCGameACC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ATC Game ACC" Width="2560" Height="1440">
    <Window.Resources>
        <BitmapImage x:Key="MyImage" UriSource="C:\Users\maxim\RiderProjects\ATCGameACC\ATCGameACC\bin\Debug\net9.0-windows\LOVV_CTR.PNG" />
    </Window.Resources>
    <Grid>
        <!-- Das Bild wird hier angezeigt -->
        <Image Source="{StaticResource MyImage}" Stretch="Fill" />

        <!-- Weitere UI-Elemente können hier hinzugefügt werden -->
        <Canvas x:Name="GameCanvas" Width="2560" Height="1440"/>
        <Button x:Name="AddAircraftButton" Content="Flugzeug hinzufügen" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Click="AddAircraftButton_OnClick"/>
    </Grid>
</Window>