<Window x:Class="ATCGameACC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ATC Game ACC" Width="1800" Height="1300">
    <Window.Resources>
        <BitmapImage x:Key="MyImage" UriSource="LOVV_S_CTR.PNG" />
    </Window.Resources>
    <Grid>
        <!-- Das Bild wird hier angezeigt -->
        <Image Source="{StaticResource MyImage}" Stretch="UniformToFill" />

        <!-- Weitere UI-Elemente können hier hinzugefügt werden -->
        <Canvas x:Name="GameCanvas" Width="1920" Height="1080" />
        <Button x:Name="AddAircraftButton" Content="Flugzeug hinzufügen" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20" Click="AddAircraftButton_OnClick"/>
    </Grid>
</Window>